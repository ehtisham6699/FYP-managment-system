<% include ../partials/navbar %>
<div class="container-fluid">
  <div class="row">
      <% include ../partials/side_nav %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register User
        </h1>
        <% include ../partials/messages %>
        <form action="/users/add_user" method="POST">
        <div class="form-check-inline form-group">
            <label class="form-check-label" for="radio1">
            <input type="radio" class="form-check-input" id="radio1" name="role" value="supervisor"  aria-expanded="true" data-toggle="collapse" href="#collapseOne" checked>Supervisor 
             </label>
        </div>
        <div class="form-check-inline form-group">
            <label class="form-check-label" for="radio1">
            <input type="radio" class="form-check-input" id="radio1" name="role" value="student" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Student
            </label>
        </div>
        <div id="collapseOne" class=" panel-collapse collapse in">
          
            <label for="name">Roll no</label>
            <input
              type="number"
              id="rollno"
              name="rollno"
              class="form-control"
              placeholder="Enter rollno"
              value=""
            />
          
            </div>
        
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4"><a href="/Dashboard">Dashboard</a></p>
      </div>
    </div>
  </div>
  </main>
</div>
</div>